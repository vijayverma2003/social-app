generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(cuid())
  clerkId       String   @unique
  email         String   @unique @db.VarChar(250)
  username      String   @db.VarChar(50)
  discriminator String   @db.VarChar(4)
  dob           String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  profile Profile?

  // Relations
  friends          Friend[]        @relation("UserFriends")
  friendOf         Friend[]        @relation("UserFriendOf")
  sentRequests     FriendRequest[] @relation("FriendRequestSender")
  receivedRequests FriendRequest[] @relation("FriendRequestReceiver")
  channelUsers     ChannelUser[]
  posts            Post[]

  @@unique([username, discriminator])
}

model Profile {
  userId               String   @id
  user                 User     @relation(fields: [userId], references: [id])
  username             String?  @db.VarChar(50)
  discriminator        String?  @db.VarChar(4)
  displayName          String?  @db.VarChar(100)
  avatarURL            String?
  bannerURL            String?
  bannerColor          String   @default("#ffffff")
  profileGradientStart String?
  profileGradientEnd   String?
  bio                  String   @default("") @db.VarChar(400)
  pronouns             String   @default("") @db.VarChar(20)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model Friend {
  id        String   @id @default(cuid())
  channelId String?
  userId    String
  friendId  String
  createdAt DateTime @default(now())

  user    User     @relation("UserFriends", fields: [userId], references: [id])
  friend  User     @relation("UserFriendOf", fields: [friendId], references: [id])
  channel Channel? @relation(fields: [channelId], references: [id])

  @@unique([userId, friendId])
  @@index([userId])
}

model FriendRequest {
  id         String   @id @default(cuid())
  senderId   String
  receiverId String
  createdAt  DateTime @default(now())

  sender   User @relation("FriendRequestSender", fields: [senderId], references: [id])
  receiver User @relation("FriendRequestReceiver", fields: [receiverId], references: [id])

  @@unique([senderId, receiverId])
  @@index([senderId])
  @@index([receiverId])
}

enum StorageObjectStatus {
  pending
  done
}

model StorageObject {
  id              String              @id @default(uuid())
  mimeType        String              @db.VarChar(255)
  size            Int
  filename        String              @db.VarChar(500)
  url             String?
  storageKey      String              @db.VarChar(500)
  hash            String              @unique @db.VarChar(64)
  status          StorageObjectStatus @default(pending)
  createdByUserId String? // User who initiated the upload
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  postAttachments PostAttachment[]

  @@index([hash])
  @@index([status])
  @@index([createdByUserId])
}

enum ChannelType {
  dm
  post
}

model Channel {
  id        String      @id @default(cuid())
  type      ChannelType
  createdAt DateTime    @default(now())

  users   ChannelUser[]
  friends Friend[]
}

model ChannelUser {
  id                  String    @id @default(cuid())
  channelId           String
  userId              String
  lastReadAt          DateTime?
  totalUnreadMessages Int       @default(0)

  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([channelId, userId])
  @@index([userId])
}

model Post {
  id          String           @id @default(cuid())
  userId      String
  content     String           @db.VarChar(2000)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  user        User             @relation(fields: [userId], references: [id])
  attachments PostAttachment[]

  @@index([userId])
}

model PostAttachment {
  id              String        @id @default(cuid())
  postId          String
  storageObjectId String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  post            Post          @relation(fields: [postId], references: [id])
  storageObject   StorageObject @relation(fields: [storageObjectId], references: [id])

  @@unique([postId, storageObjectId])
}
